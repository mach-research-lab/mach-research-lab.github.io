---
layout: default
---
<div class="post">
  <!-- Header -->
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }} {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <!-- Profile image (centered, scalable) -->
  {% if page.profile and page.profile.image %}
  <div class="profile">
    <img src="{{ 'assets/img/' | append: page.profile.image | relative_url }}" alt="{{ page.profile.image }}" loading="eager">
    {% if page.profile.more_info %}
      <div class="more-info">{{ page.profile.more_info }}</div>
    {% endif %}
  </div>
  {% endif %}

  <!-- Inline CSS for profile image (responsive, centered, keeps 4:3 ratio) -->
  <style>
    .post .profile {
      display: flex;
      flex-direction: column;
      align-items: flex-start;  /* left-align everything */
      justify-content: flex-start;
      text-align: left;
      float: none !important;
      width: 100%;
      margin: 2rem 0;
    }

    .post .profile img {
      display: block;
      margin: 0;
      width: clamp(40vw, 70%, 100vw);   /* base (for large screens) */
      max-width: 100%;
      height: auto;                     /* preserve 4:3 aspect ratio */
      object-fit: cover;
      border-radius: 0;
      transition: transform 0.2s ease;
    }

    /* ðŸ’» Medium screens (like your 14" MacBook) â†’ make image bigger */
    @media (max-width: 1600px) and (min-width: 1000px) {
      .post .profile img {
        width: clamp(55vw, 80%, 90vw);
      }
    }

    /* ðŸ“± Small screens (mobile/tablet) â†’ biggest image */
    @media (max-width: 768px) {
      .post .profile img {
        width: clamp(70vw, 90%, 100vw);
      }
    }

    .more-info {
      text-align: left;
      margin-top: 0.5rem;
      font-size: 0.95rem;
      color: #666;
    }
  </style>

  <article>
    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>
        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>