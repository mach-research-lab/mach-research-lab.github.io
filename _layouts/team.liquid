---
layout: page
---

<div class="row">
  {% for member in site.pages.team %}
    <div class="col-sm-4">
      <div class="card mb-4 shadow-sm">
        <img class="card-img-top img-fluid" src="{{ member.image | relative_url }}" alt="{{ member.name }}">
        <div class="card-body">
          <h5 class="card-title"><strong>{{ member.name }}</strong></h5>
          <p class="card-text">{{ member.description }}</p>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
